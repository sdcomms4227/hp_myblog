{{>layouts/header}}
<!-- jumbotron -->
<div class="jumbotron">
    <h1>Article 상세보기</h1>
    <hr>
    <p>articles/show.mustache</p>
</div>
<!-- table -->
<table class="table table-hover">
    <tbody>
    {{#article}}
        <tr>
            <th>작성자</th>
            <td>{{author}}</td>
        </tr>
        <tr>
            <th>글번호</th>
            <td>{{id}}</td>
        </tr>
        <tr>
            <th>제목</th>
            <td>{{title}}</td>
        </tr>
        <tr>
            <th>내용</th>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
    <tfoot>
        <tr>
            <th></th>
            <td><a href="/articles/edit/{{id}}" class="btn btn-info">수정</a></td>
        </tr>
    </tfoot>
</table>
<a href="/articles" class="btn btn-success btn-block">목록으로</a>
{{>layouts/footer}}