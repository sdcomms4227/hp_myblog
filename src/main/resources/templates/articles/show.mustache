{{>layouts/header}}
<!-- jumbotron -->
<div class="jumbotron">
    <h1>Article 상세보기</h1>
    <hr>
    <p>articles/show.mustache</p>
</div>
<!-- table -->
<table class="table table-hover">
    <tbody>
    {{#article}}
        <tr>
            <th>작성자</th>
            <td>{{author}}</td>
        </tr>
        <tr>
            <th>글번호</th>
            <td>{{id}}</td>
        </tr>
        <tr>
            <th>제목</th>
            <td>{{title}}</td>
        </tr>
        <tr>
            <th>내용</th>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
    <tfoot>
        <tr>
            <th></th>
            <td>
                <a href="/articles/edit/{{id}}" class="btn btn-info">수정</a>
                <button type="button" class="btn btn-danger" id="article-destroy-btn">삭제</button> <!-- 삭제 버튼 추가 -->
            </td>
        </tr>
    </tfoot>
</table>
<!-- 댓글 페이지 -->
{{>comments/_comments}}
<a href="/articles" class="btn btn-success btn-block">목록으로</a>
<script src="/js/app/article.js"></script> <!-- article.js 삽입 -->
{{>layouts/footer}}